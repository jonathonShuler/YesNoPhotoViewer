<Window x:Class="YesNoPhotoViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YesNoPhotoViewer"
        mc:Ignorable="d"
        Title="YesNoPhotoViewer"
        Height="450"
        Width="800">

    <Grid>

        <Image Name="MainImage" Grid.Column="1" Grid.Row="0" Visibility="Hidden"/>
        <Button Name="ChooseImageLarge" Grid.Column="1" Grid.Row="0" Content="Choose An Image" Height="30" Width="100" Visibility="Visible" Click="GetImageSource"/>
        <Button Grid.Column="0" Grid.Row="0" Content="←"/>
        <Button Grid.Column="2" Grid.Row="0" Content="→"/>
        <Button Name="ChooseImageSmall" Grid.Column="2" Grid.Row="1" Content="📁" Click="GetImageSource"/>
        <Button Grid.Column="0" Grid.Row="1"/>
        <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"/>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

    </Grid>
</Window>